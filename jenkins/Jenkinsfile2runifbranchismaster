pipeline {
    agent any

        parameters {
        choice choices: ['main', 'branch1'], name: 'BRANCH'
        }

    stages {
            stage('STAGE1') {
                when {
                        expression { BRANCH == 'main' }
                    }
                steps {
                    sh '''
                    echo "This is STAGE1 printing as it is running on master"
                    '''
                }
            }
            stage('STAGE2') {
                when {
                        expression { BRANCH == 'branch1' }
                    }
                steps {
                    sh '''
                    echo "This is STAGE2 printing as it is running the branch1"
                    '''
                }
            }
        }
    }