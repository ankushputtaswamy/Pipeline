def boolean stage_result = false
pipeline {
    agent any
    stages {
        stage('STAGE-A') {
            steps {
                echo "This is STAGE-A RUNNING"
                exit 1
                script { stage_result = true}
            }
        }
        stage('STAGE-B') {
            when {
                expression { stage_result == true }
            }
            steps {
                echo "This is STAGE-B RUNNING"
            }
        }
        stage('STAGE-C') {
            when {
                expression{ stage_result == false }
            }
            steps {
                echo "This is STAGE-C RUNNING"
            }
        }
    }
}